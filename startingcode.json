{
  "$schema":"https://vega.github.io/schema/vega-lite/v4.json",
  "data":{
     "url":"https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv"
  },
  "title":"PM10 heatmap homework",
  "config":{
     "view":{
        "strokeWidth":0,
        "step":13
     },
     "axis":{
        "domain":false
     }
  },
  "mark":"rect",
  "encoding":{
     "x":{
        "timeUnit":"day",
        "field":"time",
        "type":"temporal"
     },
     "y":{
        "aggregate":"mean",
        "field":"pm10",
        "type":"quantitative"
     },
     "color":{
        "field":"pm10",
        "aggregate":"max",
        "type":"quantitative",
        "legend":{
           "title":null
        }
     }
  }
}