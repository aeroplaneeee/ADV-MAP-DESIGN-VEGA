{
  "$schema":"https://vega.github.io/schema/vega-lite/v4.json",
  "data":{
     "url":"https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv"
  },
  "title":{
    "text":"PM10 heatmap homework",
    "anchor": "middle",
    "fontSize": 16,
    "frame":"group",
    "offset":4
  },
  "config":{
     "view":{
        "strokeWidth":340,
        "step":30
     },
     "axis":{
        "domain":true
     }
  },
  "mark":"rect",
  "encoding":{
     "x":{
        "timeUnit":"date",
        "field":"time",
        "type":"ordinal",
        "title":"day"
     },
     "y":{
        "timeUnit":"month",
        "field":"time",
        "type":"ordinal"
     },
     "color":{
        "field":"pm10",
        "aggregate":"median",
        "type":"quantitative",
        "scale":{"scheme":"magma"}
     }
  }
}
